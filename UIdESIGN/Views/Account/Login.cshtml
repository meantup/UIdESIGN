@model UIdESIGN.Models.LoginModel
@{
    ViewData["Title"] = "LoginAccount";
    Layout = "_AccountLayout";
}

<div class="col-md-12">
    <div class="card-title">
        <div class="card-header"><i class="fa fa-user-check" style="font-size:50px;"></i></div>
        <div class="card-header">
            <div class="card-body">
                <form class="offset-1" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="input-group col-md-11">
                            <div class="input-group-prepend">
                                <span class="input-group-text px-3 border-md border-right-0">
                                    <i class="fas fa-envelope"></i>
                                </span>
                            </div>
                            <input id="username" type="text" asp-for="Email" placeholder="Username" class="form-control border-left-0 border-md">
                        </div>   
                    </div>
                    &nbsp;
                    <div class="row">
                        <div class="input-group col-md-11">
                            <div class="input-group-prepend">
                                <span class="input-group-text px-3 border-md border-right-0">
                                    <i class="fas fa-lock"></i>
                                </span>
                            </div>
                            <input id="Password" type="password" asp-for="Password" placeholder="Password" class="form-control border-left-0 border-md">
                        </div>
                    </div>
                    &nbsp;
                    <div class="row">
                        <div class="input-group col-md-11">
                            <div class="input-group">
                                <input type="submit" value="Login" name="Save" class="form-control btn-block btn-success">
                            </div>
                        </div> 
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


